<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head", {titulo: "Ver producto"}) %> 
<body>
    <%- include('../partials/header') %> 
    <main class="detailProductAdmin">
        <div class="contenedorDetalle">
            <h3>Detalle Producto</h3>
                <div class="productData">
                    <h4>Nombre Producto</h4>
                    <input class="dato" value="<%= producto.description %>" disabled> 
                </div>
                <div class="productData">
                    <h4>Imagenes</h4>
                    <div class="imagesDetail">
                        <% for( let image of producto.images ) { %>
                            <img class="detail" src="/images/<%= image.name %>">
                        <% } %>
                    </div>
                </div>
                <div class="productData">
                    <h4>Descripcion</h4>
                    <input class="dato" value="<%= producto.description %>" disabled> 
                </div>
                <div class="productData">
                    <h4>Descripcion Completa</h4>
                    <textarea class="dato" cols="20" rows="5" id="extended_description"  disabled ><%= producto.extended_description %></textarea>
                </div>
                <div class="inputs">
                    <div class="inputsData">
                        <h4>Precio</h4>
                        <input class="dato" value="<%= producto.price  %>" disabled> 
                    </div>
                    <div class="inputsData">
                        <h4>Descuento</h4>
                        <input class="dato" value="<%= producto.discount  %> %" disabled> 
                    </div>
                </div>
                
                <div class="inputs">
                    <div class="inputsData">
                        <h4>Stock</h4>
                        <input class="dato" value="<%= producto.stock  %>" disabled> 
                    </div>
                    <div class="inputsData">
                        <h4>Stock Minimo</h4>
                        <input class="dato" value="<%= producto.stock_min  %>" disabled> 
                    </div>
                    <div class="inputsData">
                        <h4>Stock Maximo</h4>
                        <input class="dato" value="<%= producto.stock_max  %>" disabled> 
                    </div>
                </div>
                <div class="inputs">
                    <div class="inputsData" >
                        <h4>Categoria</h4>
                        <input class="dato" value="<%= producto.category.name  %>" disabled>
                    </div>
                    <div class="inputsData">
                        <h4>Marca</h4>
                        <input class="dato" value="<%= producto.brand.name  %>" disabled>
                    </div>
                    <div class="inputsData" >
                        <h4>Color</h4>
                        <input class="dato" value="<%= producto.color.name  %>" disabled>
                    </div>
                </div>
                <div class = "botones">
                    <a href="/products/viewProducts"><button class= "botonCancelar" type="button"> Volver </button></a>
                </div>
        </div>
    </main>
    <%- include('../partials/footer') %> 
</body>
</html>